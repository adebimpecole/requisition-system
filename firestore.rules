service cloud.firestore {
  match /databases/{database}/documents {
    match /companies/{document=**} {
      allow read, write;
    }
    match /users/{document=**} {
      allow read, write;
    }
    match /requests/{document=**} {
      allow read, write;
    }
    match /budgets/{document=**} {
      allow read, write;
    }
    match /departments/{document=**} {
      allow read, write;
    }
  }
}